---
import { Image } from 'astro:assets';
import featureImage from '../../assets/features.jpg'; // 复用hero图片，您也可以替换为其他适合的图片
import engineerIcon from '../../assets/features/engineer.png';
import permitIcon from '../../assets/features/permit.png';
import responseIcon from '../../assets/features/response.png';
import serviceIcon from '../../assets/features/service.png';

const features = [
  {
    title: "Licensed Professional Engineers",
    icon: "engineer",
    description: "Certified experts with extensive California experience providing superior architectural and structural design services.."
  },
  {
    title: "Permit Expertise",
    icon: "permit",
    description: "Complete end-to-end service ensuring successful building permit approval through our established process."
  },
  {
    title: "Rapid Response",
    icon: "response",
    description: "Initial design drafts delivered within one week, maintaining exceptional quality without compromising timelines."
  },
  {
    title: "End-to-End Service",
    icon: "service",
    description: "From concept to completion, we handle everything in your house, including design, permit, and construction."
  }
];
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <!-- 标题部分放在顶部居中 -->
    <div class="text-center mb-16">
      <span class="text-primary bg-primary/10 px-4 py-2 rounded-full inline-block text-sm font-medium mb-6 ">
        WHY CHOOSE US
      </span>
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        Built on <span class=''>Precision</span>, 
        Driven by <span class="">Excellence</span>
      </h2>
      <!-- 可选：添加一段描述文字 -->
      <p class="max-w-2xl mx-auto text-gray-600 text-lg">
        Our methodical approach ensures that every project is completed with attention to detail, 
        from initial concept to final delivery.
      </p>
    </div>

    <!-- 新布局：左侧图片，右侧Features卡片 -->
    <div class="flex flex-col lg:flex-row gap-10">
      <!-- 左侧图片 -->
      <div class="lg:w-2/5 flex">
        <div class="relative w-full h-full overflow-hidden rounded-xl shadow-lg">
          <Image
            src={featureImage}
            alt="Professional Design Process"
            class="object-cover w-full h-full"
            width={800}
            height={1000}
            quality={90}
          />
        </div>
      </div>
      
      <!-- 右侧Features卡片 -->
      <div class="lg:w-3/5">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {features.map((feature) => (
            <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
              <div class="flex justify-start mb-5">
                {feature.icon === "engineer" && (
                  <Image src={engineerIcon} alt="Engineer" class="w-10 h-10" />
                )}
                {feature.icon === "permit" && (
                  <Image src={permitIcon} alt="Permit" class="w-10 h-10" />
                )}
                {feature.icon === "response" && (
                  <Image src={responseIcon} alt="Response" class="w-10 h-10" />
                )}
                {feature.icon === "service" && (
                  <Image src={serviceIcon} alt="Service" class="w-10 h-10" />    
                )}
              </div>
              <h3 class="text-xl font-bold mb-4">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section> 
---
import { Image } from 'astro:assets';
import heroImage from '../../assets/services/home-renovation.jpg'; // 使用家装设计图片
---

<section class="relative overflow-hidden bg-gray-100 py-12 min-h-[85vh] flex flex-col justify-between">
  <!-- 上方内容区 -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 mb-8">
    <div class=" mx-auto md:mx-0">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold text-gray-900 leading-tight mb-6">
        Transforming Spaces Into Modern Masterpieces.
      </h1>
      
      <p class="text-lg sm:text-xl text-gray-700 mb-8">
        Our Team of Expert Designers and Architects Create Stunning, Functional Interiors Tailored to Your Unique Style and Needs.
      </p>
      
      <div class="flex flex-wrap gap-4">
        <a
          href="/contact"
          class="px-8 py-3 bg-primary text-white font-medium rounded-md hover:bg-secondary transition-all duration-300 uppercase tracking-wider text-sm"
        >
          LET'S TALK TODAY
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 inline" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
        
        <a
          href="/portfolio"
          class="px-8 py-3 bg-transparent border-2 border-gray-800 text-gray-800 font-medium rounded-md hover:bg-gray-100 transition-all duration-300 uppercase tracking-wider flex items-center text-sm"
        >
          <span>WATCH OUR SHOWREEL</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
      
      <!-- 信任徽章 -->
      
    </div>
  </div>
  
  <!-- 下方图片区域 -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 flex-grow relative">
    <div class="relative rounded-2xl overflow-hidden">
      <Image
        src={heroImage}
        alt="Modern Interior Design"
        class="w-full object-cover rounded-xl"
        width={1600}
        height={900}
      />
      <!-- 底部说明和导航 - 直接放在图片上 -->
      <div class="absolute bottom-8 left-0 right-0">
        <div class="container mx-auto px-8">
          <div class="flex flex-col md:flex-row justify-between items-center">
            <!-- 底部说明文字 -->
            <div class="text-white mb-4 md:mb-0">
              <h3 class="text-lg sm:text-xl font-medium">Custom Spaces Designed for Your Lifestyle</h3>
              <p class="text-sm text-white/80">and Comfort (2024)</p>
            </div>
            
            <!-- 箭头导航 -->
            <div class="flex gap-4">
              <button class="w-12 h-12 rounded-full border-2 border-white flex items-center justify-center text-white hover:bg-white/20 transition-all">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
              </button>
              <button class="w-12 h-12 rounded-full border-2 border-white flex items-center justify-center text-white hover:bg-white/20 transition-all">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 
---
import { Image } from 'astro:assets';
import googleLogo from '../../assets/google.png';
import thumbtackLogo from '../../assets/thumbtack.png';
---

<section class="bg-py-20 overflow-hidden bg-gray-100">
  <div class="container mx-auto px-4 py-8 sm:py-12 lg:py-20">
    <div class="flex flex-col md:flex-row items-stretch gap-6 lg:gap-12">
      <!-- Left Content -->
      <div class="w-full md:w-1/2 flex flex-col items-center md:items-start text-center md:text-left ">
        <p class="text-gray-500 font-bold text-xs sm:text-sm lg:text-base">
          Your local expert for design
        </p>
        <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold leading-tight sm:leading-snug lg:leading-tight mt-2 sm:mt-3">
          Sparkling Spaces,<br class="hidden sm:block" />
          Exceptional <span class="text-primary">Results</span>
        </h1>
        <p class="mt-3 sm:mt-4 lg:mt-6 text-sm sm:text-base lg:text-lg text-gray-500 max-w-sm sm:max-w-md lg:max-w-lg leading-relaxed">
          Transform your space with our reliable and eco-friendly design services. Let us handle the design while you enjoy a pristine environment.
        </p>
        <div class="mt-4 sm:mt-6 lg:mt-8">
          <a
            href="/book"
            class="inline-block px-5 sm:px-6 lg:px-8 py-2.5 sm:py-3 rounded-md bg-secondary text-white hover:bg-primary transition-all duration-300 text-sm sm:text-base hover:scale-105"
          >
            Get A Free Consultation
          </a>
        </div>

        <!-- Trust Badges -->
        <div class="mt-8 sm:mt-10 flex items-center justify-center md:justify-start gap-6 sm:gap-8">
          <!-- Thumbtack Rating -->
          <div class="flex items-center gap-2">
            <Image 
              src={thumbtackLogo}
              alt="Thumbtack" 
              width={24}
              height={24}
              class="w-6 h-6 object-contain"
            />
            <div>
              <p class="text-sm text-gray-700">Thumbtack</p>
              <div class="flex items-center gap-1">
                <div class="flex">
                  {[...Array(5)].map(() => (
                    <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  ))}
                </div>
                <span class="text-sm font-medium">4.9</span>
              </div>
            </div>
          </div>

          <!-- Google Rating -->
          <div class="flex items-center gap-2">
            <Image 
              src={googleLogo}
              alt="Google" 
              width={24}
              height={24}
              class="w-6 h-6 object-contain"
            />
            <div>
              <p class="text-sm text-gray-700">Google</p>
              <div class="flex items-center gap-1">
                <div class="flex">
                  {[...Array(5)].map(() => (
                    <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  ))}
                </div>
                <span class="text-sm font-medium">4.8</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Image -->
      <div class="w-full md:w-1/2 flex items-stretch ">
        <div class="w-full bg-primary-50 rounded-2xl sm:rounded-3xl lg:rounded-4xl ">
          <img
            src="/src/assets/hero.jpg"
            alt="Professional Designer"
            class="w-full h-full object-cover rounded-xl sm:rounded-2xl lg:rounded-3xl"
          />
        </div>
      </div>
    </div>
  </div>
</section> 
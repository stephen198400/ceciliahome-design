---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Who it fits the best?</h2>
      <p class="text-lg text-gray-600">Find the perfect professional service for your needs</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {targetGroups.map(group => (
        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center text-blue-600" set:html={group.svg}>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">{group.title}</h3>
              <p class="text-gray-600 leading-relaxed">{group.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 
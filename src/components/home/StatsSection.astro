---
const stats = [
  {
    value: "20+",
    label: "Years of Experience",
    description: "Expert structural design and architectural innovation for California homes."
  },
  {
    value: "500+",
    label: "Projects Completed",
    description: "Successful residential and commercial projects throughout California."
  },
  {
    value: "185K+",
    label: "Square Meters Transformed",
    description: "Converting spaces into beautiful, functional, and sustainable environments."
  },
  {
    value: "10%",
    label: "Average Cost Reduction",
    description: "Smart design solutions that save on construction costs."
  }
];
---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      
      {stats.map((stat) => (  
          <div>
            <h3 class="text-5xl font-bold text-secondary mb-2">{stat.value}</h3>
            <h4 class="text-xl font-semibold text-gray-900 mb-2">{stat.label}</h4>
            <p class="text-gray-600">
              {stat.description}
            </p>
          </div>
      ))}
      
    </div>
  </div>
</section> 
---
import { Image } from 'astro:assets';

import aduDesignImage from '../../assets/home/services/adu-design.jpg';
import buildingInspectionImage from '../../assets/home/services/building-inspection.jpg';
import commercialDesignImage from '../../assets/home/services/commercial-design.jpg';
import homeRenovationImage from '../../assets/home/services/home-renovation.jpg';
import houseIcon from '../../assets/home/services/icons/house-icon.png';
import seismicRetrofittingImage from '../../assets/home/services/seismic-retrofitting.jpg';
import structuralEngineeringImage from '../../assets/home/services/structural-engineering.jpg';

interface Service {
  title: string;
  slug: string;
  question: string;
  description: string;
  image: ImageMetadata;
}

const services: Service[] = [
  {
    title: "ADU Design & Planning",
    slug: "/services/adu-design",
    question: "Looking to maximize your property value with an ADU but don't know where to start?",
    description: "Expert ADU design services from concept to permits. Maximize property value with legal additional living space.",
    image: aduDesignImage
  },
  {
    title: "Structural Engineering",
    slug: "/services/structural-engineering",
    question: "Need professional structural engineering to ensure your building's safety and compliance?",
    description: "Complete structural design and analysis for new construction, renovations, and seismic retrofitting. California code compliant.",
    image: structuralEngineeringImage
  },
  {
    title: "Home Renovation",
    slug: "/services/home-renovation",
    question: "Want to upgrade your home but concerned about construction quality and permits?",
    description: "Professional design for kitchen, bathroom, and whole-house renovations. Complete construction drawings for project success.",
    image: homeRenovationImage
  },
  {
    title: "Seismic Retrofitting",
    slug: "/services/seismic-retrofitting",
    question: "Worried about your building's earthquake safety?",
    description: "Advanced seismic evaluation and retrofitting using latest earthquake-resistant technologies. Enhanced structural integrity guaranteed.",
    image: seismicRetrofittingImage
  },
  {
    title: "Building Inspection",
    slug: "/services/building-inspection",
    question: "Dealing with building damage or code violations?",
    description: "Comprehensive structural safety and damage assessments. Expert solutions for building concerns and code compliance.",
    image: buildingInspectionImage
  },
  {
    title: "Commercial Design",
    slug: "/services/commercial-design",
    question: "Need professional commercial space design to elevate your business?",
    description: "Specialized design for restaurants, retail spaces, and commercial properties. Aesthetic appeal with regulatory compliance.",
    image: commercialDesignImage
  },
  {
    title: "Retaining Wall Design",
    slug: "/services/retaining-wall",
    question: "",
    description: "Expert retaining wall design for slope stability and landscape architecture. Safety meets aesthetics.",
    image: structuralEngineeringImage
  }
];
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <span class="text-primary bg-primary/10 px-4 py-2 rounded-full inline-block text-sm font-medium mb-6 ">
        PROFESSIONAL SERVICES
      </span>
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Expert Design & Engineering Solutions</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        We provide comprehensive architectural design and structural engineering services, delivering customized solutions for all your building needs.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {services.slice(0, 6).map(service => (
        <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition-shadow duration-300 border border-gray-100 overflow-hidden flex flex-col">
          {/* 上方图片 - 可点击 */}
          <a href={service.slug} class="relative h-48 bg-gray-200 block overflow-hidden">
            <Image 
              src={service.image} 
              alt={service.title}
              class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
              width={600}
              height={400}
              loading="lazy"
            />
          </a>
          
          {/* 下方内容 */}
          <div class="p-6 flex flex-col flex-grow">
            <div class="flex items-center gap-3 mb-3">
              <div class="w-8 h-8 flex-shrink-0 flex items-center justify-center">
                <Image 
                  src={houseIcon} 
                  alt="House Icon"
                  width={24}
                  height={24}
                  class="w-6 h-6"
                />
              </div>
              <h3 class="text-xl font-bold text-gray-900">
                <a href={service.slug} class="hover:text-blue-600 transition-colors duration-300">
                  {service.title}
                </a>
              </h3>
            </div>
            <p class="text-gray-600 leading-relaxed line-clamp-3 mb-4">{service.description}</p>
            
            {/* 底部箭头链接 */}
            <div class="mt-auto">
              <a href={service.slug} class="inline-flex items-center text-primary hover:text-primary/80 font-medium transition-colors">
                Learn More
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center">
      <a
        href="/services"
        class="inline-block px-6 sm:px-8  py-3  rounded-md bg-primary text-white hover:bg-primary/80 transition-all duration-300 text-base sm:text-lg hover:scale-105 shadow-md"
      >
        Learn More About Our Services
        
      </a>
    </div>
  </div>
</section> 
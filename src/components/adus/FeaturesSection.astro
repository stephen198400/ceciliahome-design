---
import { Image } from 'astro:assets';
import engineerIcon from '../../assets/home/features/engineer.png';
import featureImage from '../../assets/home/features/features.jpg'; // 复用hero图片，您也可以替换为其他适合的图片
import permitIcon from '../../assets/home/features/permit.png';
import responseIcon from '../../assets/home/features/response.png';
import serviceIcon from '../../assets/home/features/service.png';

const features = [
  {
    title: "Rapid ADU Design",
    icon: "response",
    description: "Initial ADU design drafts delivered within one week, with complete designs finished in just three weeks while maintaining exceptional quality."
  },
  {
    title: "Licensed California Professionals",
    icon: "engineer",
    description: "Our team consists of licensed California engineers and designers with extensive experience in ADU projects throughout the state."
  },
  {
    title: "End-to-End Permit Service",
    icon: "permit",
    description: "Comprehensive service from initial concept to building permit approval, handling all documentation and regulatory requirements for your ADU."
  },
  {
    title: "Contractor Partnerships",
    icon: "service",
    description: "We collaborate with multiple trusted contractors, offering seamless transition from design to construction so you can build with confidence."
  }
];
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <!-- 标题部分放在顶部居中 -->
    <div class="text-center mb-16">
      <span class="text-primary bg-primary/10 px-4 py-2 rounded-full inline-block text-sm font-medium mb-6 ">
        WHY CHOOSE US FOR YOUR ADU
      </span>
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        Your ADU Partner from <span class=''>Design</span> to 
        <span class="">Construction</span>
      </h2>
      <!-- 可选：添加一段描述文字 -->
      <p class="max-w-2xl mx-auto text-gray-600 text-lg">
        We specialize in making the ADU process simple and efficient, handling every detail 
        so you can focus on enjoying your new space.
      </p>
    </div>

    <!-- 新布局：左侧图片，右侧Features卡片 -->
    <div class="flex flex-col lg:flex-row gap-10">
      <!-- 左侧图片 -->
      <div class="lg:w-2/5 flex">
        <div class="relative w-full h-full overflow-hidden rounded-xl shadow-lg">
          <Image
            src={featureImage}
            alt="ADU Design and Construction"
            class="object-cover w-full h-full"
            width={800}
            height={1000}
            quality={90}
          />
        </div>
      </div>
      
      <!-- 右侧Features卡片 -->
      <div class="lg:w-3/5">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {features.map((feature) => (
            <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
              <div class="flex justify-start mb-5">
                {feature.icon === "engineer" && (
                  <Image src={engineerIcon} alt="Engineer" class="w-10 h-10" />
                )}
                {feature.icon === "permit" && (
                  <Image src={permitIcon} alt="Permit" class="w-10 h-10" />
                )}
                {feature.icon === "response" && (
                  <Image src={responseIcon} alt="Response" class="w-10 h-10" />
                )}
                {feature.icon === "service" && (
                  <Image src={serviceIcon} alt="Service" class="w-10 h-10" />    
                )}
              </div>
              <h3 class="text-xl font-bold mb-4">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section> 
---
import { Image } from 'astro:assets';
import attachedGarage from '../../assets/adus/adu-types/attached-garage.png';
import detachedGarage from '../../assets/adus/adu-types/detached-garage.png';
import existingConverted from '../../assets/adus/adu-types/existing-converted.png';
import jadu from '../../assets/adus/adu-types/jadu.png';
import newAttached from '../../assets/adus/adu-types/new-attached.png';
import newDetached from '../../assets/adus/adu-types/new-detached.png';

interface AduType {
  id: string;
  title: string;
  description: string;
  image: ImageMetadata;
  alt: string;
}

const aduTypes: AduType[] = [
  {
    id: 'detached-garage',
    title: 'Detached Garage Conversion ADU',
    description: 'Transform your standalone garage into a separate living space, providing an economical option by utilizing existing structures.',
    image: detachedGarage,
    alt: 'Detached Garage Conversion ADU'
  },
  {
    id: 'attached-garage',
    title: 'Attached Garage Conversion ADU',
    description: 'Convert your attached garage into an ADU with convenient access to the main house while sharing utilities and common areas.',
    image: attachedGarage,
    alt: 'Attached Garage Conversion ADU'
  },
  {
    id: 'new-detached',
    title: 'New Detached ADU',
    description: 'Build a completely new standalone ADU on your property, offering maximum privacy and freedom in design choices.',
    image: newDetached,
    alt: 'New Detached ADU'
  },
  {
    id: 'new-attached',
    title: 'New Attached ADU',
    description: 'Construct a new ADU connected to your main house, allowing for easy access and potential sharing of infrastructure.',
    image: newAttached,
    alt: 'New Attached ADU'
  },
  {
    id: 'existing-converted',
    title: 'Existing Converted ADU',
    description: 'Convert existing spaces like basements, attics, or outbuildings into legal ADU units with proper permitting and design.',
    image: existingConverted,
    alt: 'Existing Converted ADU'
  },
  {
    id: 'jadu',
    title: 'JADU (Junior ADU)',
    description: 'Small ADUs (max 500 sq ft) typically created within the main house, often sharing kitchen and bathroom facilities with the primary residence.',
    image: jadu,
    alt: 'Junior Accessory Dwelling Unit'
  }
];
---

<section class="py-16 ">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <span class="text-primary bg-primary/10 px-4 py-2 rounded-full inline-block text-sm font-medium mb-6">
        ADU SOLUTIONS
      </span>
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        What Fits On <span class="text-primary">Your Property</span>
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        California offers various ADU options to fit your property and needs. Discover which type works best for your situation.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {aduTypes.map((adu) => (
        <div class="bg-gray-50 rounded-xl overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300">
          <div class="relative h-64 overflow-hidden">
            <Image 
              src={adu.image} 
              alt={adu.alt}
              class="w-full h-full object-center transition-transform duration-500 hover:scale-105"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-3">{adu.title}</h3>
            <p class="text-gray-600">{adu.description}</p>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <a 
        href="#contactForm" 
        class="inline-block px-8 py-4 bg-primary text-white rounded-md shadow-md hover:bg-primary/90 transition-colors duration-300"
      >
        Talk to an ADU Expert
      </a>
    </div>
  </div>
</section>
